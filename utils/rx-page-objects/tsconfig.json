{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "allowJs": true,
        "outDir": ".",
        "rootDir": ".",
        "types": [
            "node",
            "mocha",
            "lodash",
            "chai-as-promised"
        ]
    },
    "exclude": [],
    "include": [
        "src/*.ts",
        "test/*.ts"
    ]
}
